<% include ../partials/header %>


<form action="/login" method="post">
    <div class="form-group">
        <label for="user[username]">Username</label>
        <i class="fa fa-user" aria-hidden="true"></i>
        <input placeholder="your name" class="form-control" type="text" name="user[username]"/>
    </div>

    <div class="form-group">
        <label for="user[password]">Password</label>
        <i class="fa fa-lock" aria-hidden="true"></i>
        <input placeholder="your password" class="form-control" type="password" name="user[password]"/>
    </div>

    <button class="btn btn-default btn-primary btn-block" type="submit">Login</button>
</form>

<% include ../partials/footer %>