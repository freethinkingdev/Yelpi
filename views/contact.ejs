<% include partials/header %>


<h1 xmlns="http://www.w3.org/1999/html"><i class="fa fa-envelope"></i> <%= title %></h1>

    <form>
        <div class="form-group">
            <label for="name">Name</label>
            <i class="fa fa-user" aria-hidden="true"></i>
            <input placeholder="your name" class="form-control" type="text" name="name"/>
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <i class="fa fa-envelope" aria-hidden="true"></i>
            <input placeholder="your email" class="form-control" type="text" name="email"/>
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <i class="fa fa-comment" aria-hidden="true"></i>
            <textarea placeholder="your message" class="form-control" type="text" name="message"></textarea>
        </div>

        <button class="btn btn-default" type="submit">Send</button>
    </form>

<% include partials/footer %>